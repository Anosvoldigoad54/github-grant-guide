# ===================================
# ARISE HRM - Environment Variables
# ===================================

# Supabase Configuration (Required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Application Configuration
VITE_APP_NAME=Arise HRM
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Advanced Human Resource Management System

# Feature Flags
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=false
VITE_MAINTENANCE_MODE=false

# Security Configuration
VITE_ENABLE_2FA=true
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5

# Third-party Integrations (Optional)
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_GOOGLE_MAPS_API_KEY=

# Email Configuration (Optional)
VITE_EMAIL_SERVICE_ID=
VITE_EMAIL_TEMPLATE_ID=
VITE_EMAIL_PUBLIC_KEY=

# Development Configuration
VITE_LOG_LEVEL=info
VITE_API_TIMEOUT=10000
VITE_ENABLE_MOCK_DATA=true

# Notification Configuration
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_NOTIFICATION_VAPID_KEY=

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_TIMEZONE=America/New_York
VITE_DEFAULT_CURRENCY=USD

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600000
VITE_LAZY_LOAD_IMAGES=true

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_SWITCHING=true
VITE_CUSTOM_BRAND_COLORS=false

# Database Configuration
VITE_ENABLE_RLS_BYPASS=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_SYNC_INTERVAL=300000

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_REACT_QUERY_DEVTOOLS=false
VITE_SHOW_PERFORMANCE_METRICS=false
